{
  "name": "paymentsloader-app",
  "version": "1.0.0",
  "description": "Payments loader application",
  "main": "index.js",
  "scripts": {
    "client": "cd frontend && ng serve --configuration=production",
    "client:dev": "cd frontend && ng serve",
    "server": "cd backend && npm run serve",
    "serve": "concurrently \"npm run client\" \"npm run server\"",
    "serve:dev": "concurrently \"npm run client:dev\" \"npm run server\"",
    "build:client": "cd frontend && ng build",
    "build:server": "cd backend && npm run build",
    "build:app": "npm run build:client && npm run build:server",
    "build": "npm run build:app && copyfiles -a frontend/dist out && copyfiles -a backend/lib out"
  },
  "keywords": [
    "Huspi"
  ],
  "author": "Huspi",
  "license": "ISC",
  "dependencies": {
    "@angular/cdk": "^7.2.0",
    "ag-grid-angular": "^19.1.2",
    "ag-grid-community": "^19.1.4",
    "concurrently": "^4.1.0"
  },
  "devDependencies": {
    "jsonwebtoken": "^8.4.0",
    "copyfiles": "^2.1.0",
    "rimraf": "^2.6.2"
  }
}
